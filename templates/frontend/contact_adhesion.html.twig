{% extends 'base.html.twig' %}

{% block body %}
    <main>

        <section class="page" id="page" style="margin-top:100px">
            <div class="container my-5" data-aos="fade-up" data-aos-duration="3000" data-aos-easing="linear">

                {% for label, messages in app.flashes(['success', 'warning', 'danger']) %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label }} alert-dismissible fade show my-5" role="alert">
                            {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>

                    {% endfor %}
                {% endfor %}

                <h3 class="fw-lighter text-uppercase my-4">RÃ©joignez-nous</h3>
                {{ form_start(form) }}
                    <div class="row form-group">
                        <div class="col-2 col-md-3 mt-3">{{ form_row(form.civilite) }}</div>
                        <div class="col-10 col-md-4 mt-3">{{ form_row(form.nom) }}</div>
                        <div class="col-12 col-md-5 mt-3">{{ form_row(form.prenom) }}</div>
                        <div class="col-md-4 rounded-0 mt-3">{{ form_row(form.email) }}</div>
                        <div class="col-md-4 rounded-0 mt-3">{{ form_row(form.telephone) }}</div>
                        <div class="col-md-4 rounded-0 mt-3">{{form_row(form.entreprise)}}</div>
                        <div class="col-md-4 rounded-0 mt-3">{{ form_row(form.fonction) }}</div>
                        <div class="col-md-4 rounded-0 mt-3">{{ form_row(form.pays) }}</div>
                        <div class="col-md-4 rounded-0 mt-3">{{ form_row(form.ville) }}</div>
                        <div class="col-12 mt-3">{{ form_row(form.message) }}</div>
                        <div class="text-end mt-5">
                        {{ form_rest(form) }}
                        </div>
                        <div class="row d-flex justify-content-end">
                            <div class="col-12 col-md-4 col-lg-4 d-grid">
                                <button type="submit" class="btn btn-main px-5 py-3 rounded-0">Envoyer</button>
                            </div>
                        </div>
                    </div>
                {{ form_end(form) }}
            </div>
        </section>



    </main>
{% endblock %}

{% block title %}
Rejoignez-nous
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <style>
        form ul li{
            color: red;
            font-style: italic;
        }
    </style>
{% endblock %}

