{% extends 'base.html.twig' %}

{% block body %}
    <main>

        <section class="page" id="page" style="margin-top:100px">
            <div class="container my-5" data-aos="fade-up" data-aos-duration="3000" data-aos-easing="linear">
                {% if actualite %}

                    <h3 class="fw-lighter text-uppercase my-4">{{ actualite ? actualite.titre }}</h3>
                    {% if actualite and actualite.media %}
                        <figure class="overflow-hidden float-start me-4 mb-4">
                            <img src="{{ asset('uploads/pages/' ~ actualite.media) }}" alt="{{ actualite.media }}" class="img-fluid float-start">
                        </figure>
                    {% endif %}
                    {{ actualite ? actualite.contenu|raw  }}

                {% else %}

                    <h1 class="h1 text-center my-5 fst-italic text-success">
                        <i class="bi bi-exclamation-triangle"></i> Page en maintenance
                    </h1>

                {% endif %}


            </div>
        </section>



    </main>
{% endblock %}

{% block title %}
    {{ actualite ? actualite.titre  }}
{% endblock %}

